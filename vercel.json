{
    "version": 2,
    "builds": [
        {
            "src": "server/app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "methods": ["GET", "POST", "OPTIONS"],
            "dest": "server/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/$1",
            "continue": true
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/index.html"
        }
    ],
    "env": {
        "FLASK_ENV": "production"
    }
}
