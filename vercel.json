{
    "version": 2,
    "builds": [
        {
            "src": "server/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/app.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
        }
    ]
}
