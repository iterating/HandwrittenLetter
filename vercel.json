{
    "version": 2,
    "builds": [
        {
            "src": "server/app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "outputDirectory": "."
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/app.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "index.html"
        }
    ]
}
